@page
@model MyShop.Web.Pages.Admin.Agent.CreateAgentModel
@{
    ViewData["Title"] = "افزودن نمایندگی";
    Layout = "Shared/_AdminLayout";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">افزودن نمایندگی </h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="row">
    <form method="post" enctype="multipart/form-data">
        <div class="col-md-8">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    اطلاعات نمایندگی
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="form-group">
                        <label>نام </label>
                        <input asp-for="Agent.Name" type="text"  class="form-control">
                    </div>
                    <div class="form-group">
                        <label>استان </label>
                        <input asp-for="Agent.Ostan" type="text"  class="form-control">
                    </div>
                    <div class="form-group">
                        <label>شهر </label>
                        <input asp-for="Agent.City" type="text"  class="form-control">
                    </div>
                    <div class="form-group">
                        <label>آدرس </label>
                        <input asp-for="Agent.Address" type="text"  class="form-control">
                    </div>
                    <div class="form-group">
                        <label>کد پستی </label>
                        <input asp-for="Agent.PostalCode" type="text"  class="form-control">
                    </div>
                    <div class="form-group">
                        <label>تلفن ثابت  </label>
                        <input asp-for="Agent.TelePhone" type="text"  class="form-control">
                    </div>
                    <div class="form-group">
                        <label>نمابر </label>
                        <input asp-for="Agent.Fax" type="text"  class="form-control">
                    </div>
                    <div class="form-group">
                        <label>ایمیل</label>
                        <input asp-for="Agent.Email" type="email"  class="form-control">
                    </div>
                    <div class="form-group">
                        <label>وب سایت  </label>
                        <input asp-for="Agent.WebSite" type="text"  class="form-control">
                    </div>
                    <div class="form-group">
                        <label>نوع مالکیت  </label>
                        <input asp-for="Agent.NoeMalekiat" type="text"  class="form-control">
                    </div>
                    <input type="submit" value="ذخیره اطلاعات" class="btn btn-success"/>
                </div>
                <!-- /.panel-body -->
            </div>
        </div>
    </form>
</div>








