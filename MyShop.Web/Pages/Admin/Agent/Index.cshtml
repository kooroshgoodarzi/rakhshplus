@page
@using MyShop.Core.Convertors
@model MyShop.Web.Pages.Admin.Agent.IndexModel
@{
    ViewData["Title"] = "لیست نمایندگی ها ";
    Layout = "Shared/_AdminLayout";
}


<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">لیست نمایندگی ها</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                لیست نمایندگی ها
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">
                    <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline" role="grid">
                        @* <div class="row">
                            <form>
                            <div class="col-sm-5 col-md-5">
                            <input type="text" name="filterUserName" class="form-control" placeholder="نام کاربری" />
                            </div>
                            <div class="col-sm-5 col-md-5">
                            <input type="text" name="filterEmail" class="form-control" placeholder="ایمیل" />
                            </div>
                            <div class="col-sm-2 col-md-2">
                            <button type="submit" class="btn btn-info">بگرد</button>
                            <a class="btn btn-default btn-sm" href="/Admin/Users">خالی</a>
                            </div>
                            </form>
                            </div>*@
                        <div class="col-md-12" style="margin: 10px 0;">

                            <a asp-page="CreateAgent" class="btn btn-outline btn-success">افزودن نمایندگی جدید</a>

                        </div>
                        <table id="myTable" class="table table-striped table-bordered table-hover dataTable no-footer"  aria-describedby="dataTables-example_info">
                            <thead>
                            <tr>
                                <th>نام نمایندگی </th>
                                <th>استان</th>
                                <th>شهر</th>
                                <th>کد پستی</th>
                                <th>تلفن ثابت</th>
                                <th>ایمیل</th>
                                <th>آدرس</th>
                                <th>تاریخ ثبت نام</th>
                                <th>دستورات</th>
                            </tr>
                            </thead>
                            <tbody>
                            @foreach (var agent in Model.Agent)
                            {
                                <tr>
                                    <td>
                                        @agent.Name
                                    </td>
                                    <td>
                                        @agent.Ostan
                                    </td>
                                    <td>
                                        @agent.City
                                    </td>
                                    <td>
                                        @agent.PostalCode
                                    </td>
                                    <td>
                                        @agent.TelePhone
                                    </td>
                                    <td>
                                        @agent.Email
                                    </td>
                                    <td>
                                        @agent.Address
                                    </td>
                                    <td>
                                        @agent.CreateDtae.ToShamsi()
                                    </td>
                                    <td>
                                        <a class="btn btn-warning btn-sm">
                                            ویرایش
                                        </a>
                                        <a class="btn btn-danger btn-sm">
                                            حذف
                                        </a>
                                    </td>
                                </tr>
                            }
                            </tbody>
                        </table>
                    </div>
                </div>

            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>

<script src="/AdminContent/js/datatables.min.js"></script>

<script>
    $(document).ready(function () {
        $("#myTable").DataTable();
    });
</script>
